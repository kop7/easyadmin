{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
<div class="login-card">
    <h1>Sign in</h1>

    {% if error %}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>

        <label for="password">Password</label>
        <input type="password" name="_password" id="password" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">Sign in</button>
    </form>

    <p class="hint">Default login: <strong>admin@example.com</strong> / <strong>admin123</strong></p>
</div>
{% endblock %}
